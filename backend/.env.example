# Environment
ENVIRONMENT=development  # development, staging, production

# Application
APP_NAME=DocuLens
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://doculens:your_password@localhost:5432/doculens
DATABASE_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Password Hashing
BCRYPT_ROUNDS=12

# AI APIs - Groq (Primary)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-70b-versatile

# AI APIs - Anthropic Claude (Backup/Premium)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514

# External APIs
YOUTUBE_API_KEY=your-youtube-api-key-here
GITHUB_TOKEN=your-github-token-here

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/github/callback

# Email - SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@doculens.dev
FROM_NAME=DocuLens

# Storage - Supabase (Free tier)
STORAGE_TYPE=supabase
SUPABASE_URL=<YOUR SUPABASE URL>
SUPABASE_ANON_KEY=<YOUR SUPABASE ANON KEY>
SUPABASE_SERVICE_KEY=<YOUR SUPABASE SERVICE KEY>
SUPABASE_BUCKET=<YOUR SUPABASE BUCKET>

# Monitoring - Sentry
SENTRY_DSN=your-sentry-dsn-here
SENTRY_TRACES_SAMPLE_RATE=0.1

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","https://doculens.dev"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_AUTH_PER_MINUTE=10

# Scraping
SCRAPING_USER_AGENT=DocuLens-Bot/1.0 (+https://doculens.dev)
SCRAPING_DELAY_SECONDS=2
SCRAPING_CONCURRENT_REQUESTS=5

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log